{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "esModuleInterop": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "outDir": "dist",
	  "rootDir": "src",
	  "sourceMap": true,
	  "declaration": true,
	  "removeComments": true,
	  "resolveJsonModule": true,
	  "baseUrl": "."
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
  }